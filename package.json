{
  "name": "statello",
  "version": "0.0.2",
  "keywords": [
    "js",
    "javascript",
    "utility",
    "typescript"
  ],
  "description": "statello is a lightweight, framework-agnostic state management library in TypeScript.",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "browser": "./dist/umd/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run test && npm run build:cjs && npm run build:esm && npm run build:umd",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:umd": "tsc --project tsconfig.umd.json",
    "build:examples": "npm run build && cd examples/node-example && npm install && cd ../web-example && npm install",
    "test": "jest",
    "prepare": "npm run build",
    "pack": "npm pack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thomastoledo/statello.git"
  },
  "author": "Thomas TOLEDO",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thomastoledo/statello/issues"
  },
  "homepage": "https://github.com/thomastoledo/statello#readme"
}
